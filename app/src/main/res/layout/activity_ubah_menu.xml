<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".UbahMenu"
    >

    <TextView
        android:id="@+id/judul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Daftar Menu"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/editId"
        android:layout_below="@id/judul1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukan Id"
        />

    <EditText
        android:id="@+id/edit_nama"
        android:layout_below="@id/editId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukkan Nama Menu"
        />

    <EditText
        android:id="@+id/edit_harga"
        android:layout_below="@id/edit_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukkan Harga Menu"
        />

    <EditText
        android:id="@+id/edit_desk"
        android:layout_below="@id/edit_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukkan Deskripsi Menu"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_desk"
        android:text="Ubah"
        android:textSize="20sp"
        android:textAllCaps="false"
        />

</RelativeLayout>